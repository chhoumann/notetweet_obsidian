{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "types": ["node", "svelte"],
    "baseUrl": ".",
    "paths": {
      "src": ["src/*"]
    },
    "ignoreDeprecations": "5.0",
    "importsNotUsedAsValues": "preserve"
  }
}